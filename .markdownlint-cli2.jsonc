{
  // Markdownlint configuration for the project
  "globs": [
    "**/*.md"
  ],
  "ignores": [
    ".claude/**",
    ".git/**",
    "**/node_modules/**",
    "**/.svelte-kit/**",
    "**/storybook-static/**",
    "**/.yarn/**",
    "**/.pnpm-store/**",
    "**/.idea/**",
    "**/.vscode/**"
  ],
  "config": {
    // Line length rule - allow slightly longer lines for technical content
    "MD013": {
      "line_length": 120,
      "code_blocks": false,
      "tables": false
    },
    // Allow bare URLs in angle brackets
    "MD034": false
  }
}