{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/pre_tool_use_protect_configs.py",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit|NotebookEdit|mcp__serena__.*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/post_tool_use_python_check.py",
            "timeout": 60
          }
        ]
      }
    ]
  }
}